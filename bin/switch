#!/usr/bin/env node

var inquirer = require('inquirer');
var profile = require('../lib/profile');

var homeDir = (process.platform === 'win32') ? process.env.USERPROFILE : process.env.HOME;
var fileName = homeDir + '/.aws/config';
var credFileName = homeDir + '/.aws/credentials';

profile.getProfileNames(fileName, function (err, profiles) {
  if (err) {
    console.log(err);
  }
  else {
    inquirer.prompt([
      {
        type: "list",
        name: "profile",
        message: "Choose profile to load:",
        choices: profiles
      }
    ], function (answers) {
      profile.setProfile(answers.profile, fileName, function (err) {
        if (err) {
          console.log("Well...that didn't work");
        }
        else {
          console.log("Profile switched to " + answers.profile);
        }
      })
      profile.setProfile(answers.profile, credFileName, function (err) {
        if (err) {
          console.log("Well...that didn't work");
        }
        else {
          console.log("Credentials switched to " + answers.profile);
        }
      })
    });
  }
});
